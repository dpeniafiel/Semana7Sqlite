<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7Sqlite.vistas.Elemento" Title="Eliminar / Actualizar estudiante"
             NavigationPage.HasBackButton="False" >
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtNombre" Placeholder="nombre"/>

            <Entry x:Name="txtUsuario" Placeholder="nombre de usuario"/>

            <Entry x:Name="txtContrasenia" Placeholder="contraseña" IsPassword="True"/>

            <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked" />

            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>