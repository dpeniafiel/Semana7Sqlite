<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7Sqlite.vistas.Registro" Title="Registro de estudiantes" NavigationPage.HasBackButton="False" >
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtNombre" Placeholder="ingrese su nombre"/>
            
            <Entry x:Name="txtUsuario" Placeholder="ingrese su nombre de usuario"/>

            <Entry x:Name="txtContrasenia" Placeholder="ingrese su contraseña" IsPassword="True"/>

            <Button x:Name="btnGuardar" Text="Guardar" Clicked="btnGuardar_Clicked" />

            <Button x:Name="btnSalir" Text="Salir" Clicked="btnSalir_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>